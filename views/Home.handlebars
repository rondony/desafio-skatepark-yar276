<div class="py-4">
  <h2>Lista de participantes</h2>

  <hr />

  <div>
    <span>Aprobados: {{aprobados}}</span> |
    <span>En revisión: {{enRevision}}</span>
  </div>

  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Foto</th>
        <th scope="col">Nombre</th>
        <th scope="col">Años de experiencia</th>
        <th scope="col">Especialidad</th>
        <th scope="col">Estado</th>
      </tr>
    </thead>
    <tbody>

      {{#each skaters}}
      <tr>
        <th scope="row">{{id}}</th>
        <td><img src="/img/{{foto}}" alt="{{foto}}"></td>
        <td>{{nombre}}</td>
        <td>{{anos_experiencia}}</td>
        <td>{{especialidad}}</td>
        {{#if estado }}
        <td class="text-success font-weight-bold">Aprobado</td>
        {{else}}
        <td class="text-warning font-weight-bold">En revisión</td>
        {{/if}}
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
</body>

</html>

